{
  "name": "htmlEditor",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "This is a tool for developers to editor html page",
  "icons": { "16": "editorIcon.png",
           "48": "editorIcon48.png",
          "128": "editorIcon128.png" },
  //"options_page": "options.html",
  "devtools_page": "devtools.html",
  "permissions": ["http://*/*", "https://*/*" ,"tabs","contentSettings","webRequest","background"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
      "default_title": "HtmlEditor",
      "default_icon": "editorIcon.png"
  }
}